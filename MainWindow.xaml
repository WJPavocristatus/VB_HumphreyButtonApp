<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VB_HumphreyButtonApp"
        mc:Ignorable="d"
        x:Name="MainWin"
        Background="Gray" 
        ShowInTaskbar="False" 
        AllowDrop="False"
        Title="MainWindow" Height="1080" Width="2944">


    <Grid Name="AllScreens">
        
        <!-- Grid defining both screens/views as Columns -->
        <Grid Background="DarkCyan" RenderTransformOrigin="0.500,0.500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="ResearcherView" Width="1920"/>
                <ColumnDefinition Name="SubjectView" Width="1024"/>
            </Grid.ColumnDefinitions>
            <!-- ResearcherView Column -->
            
            <!-- Stat tracker block for current session -->
            <StackPanel  Background="LightGray"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="858,169,0,0" Width="280">
                <Label Content="STATS (ms)" FontSize="18" Height="32" HorizontalAlignment="Center"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Name="TimeLabels" Width="142"/>
                        <ColumnDefinition Name="TimeVals" Width="142"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Height="225" Width="142" HorizontalAlignment="Left" Grid.Column="0">
                        <ListBoxItem Height="40">
                            <Label Content="Cumulative Btn Hold:"/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label Content="Current Hold Time:"/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label Content="Stim A Hold Time:"/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                                <Label Content="Stim B Hold Time:"/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label Content="Cumulative Latency:"/>
                        </ListBoxItem>
                    </ListBox>
                    <ListBox Height="225" Width="142" Grid.Column="1">
                        <ListBoxItem Height="40">
                            <Label x:Name="PressWatchVal" Content=""/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label x:Name="ActiveStimVal" Content=""/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label x:Name="StimAWatchVal" Content=""/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label x:Name="StimBWatchVal" Content=""/>
                        </ListBoxItem>
                        <ListBoxItem Height="40">
                            <Label x:Name="LatencyVal" Content=""/>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </StackPanel>
            
            <!-- Research Subject Combo Box -->
            <Grid Margin="376,192,1234,672" Height="200" Width="310">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Label  Content="Subject" Foreground="White" FontSize="14"/>
                <ComboBox Grid.Column="1" x:Name="SubjectName" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="160" Height="24" FontSize="14" >
                    <ComboBoxItem Content="Billy"></ComboBoxItem>
                    <ComboBoxItem Content="Ben"></ComboBoxItem>
                    <ComboBox.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </Grid>

            <!-- Data Collectr & Save Button -->
            <Grid Name="GridDataRecorder" Height="200" Margin="344,648,815,216" RenderTransformOrigin="0.518,-0.017">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="139"></ColumnDefinition>
                    <ColumnDefinition Width="161"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox x:Name="TextBox1"  Grid.ColumnSpan="2" Height="150" TextWrapping="Wrap" Text="" VerticalAlignment="Center"  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Margin="0,0,-461,0" />
                <Button x:Name="BtnSave" Background="PaleGreen"  Content="Save Data" HorizontalAlignment="Left" Margin="75,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20"/>



            </Grid>




        </Grid>
        <Grid x:Name="StimGrid" Background="Black" Panel.ZIndex="10" VerticalAlignment="Center" HorizontalAlignment="Left" Width="1024" Height="1064" Margin="1920,0,0,0" />

    </Grid>
</Window>
