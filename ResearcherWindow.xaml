<Window x:Class="ResearcherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VB_HumphreyButtonApp"
        mc:Ignorable="d"
        Title="ResearcherWindow" Height="450" Width="800">
    <Grid Name="Main">

        <StackPanel Height="300" Background="LightGray"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="476,49,0,0">
            <Label Content="STATS" FontSize="18"/>
            <ListBox HorizontalAlignment="Center" Height="267" Width="200">
                <ListBoxItem Height="40">
                    <Label Name="PressWatchVal" Content=""/>
                </ListBoxItem>
                <ListBoxItem Height="40">
                    <Label Name="ActiveStimVal" Content=""/>
                </ListBoxItem>
                <ListBoxItem Height="40">
                    <Label Name="StimAWatchVal" Content=""/>
                </ListBoxItem>
                <ListBoxItem Height="40">
                    <Label Name="StimBWatchVal" Content=""/>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
        <Grid Name="TrialSettings" Margin="30,55,499,54">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <ComboBox FontSize="14" Grid.Column="1" x:Name="SubjectName" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="160" Height="24" >
                <ComboBoxItem Content="Billy"></ComboBoxItem>
                <ComboBoxItem Content="Evelyn"></ComboBoxItem>
                <ComboBoxItem Content="Arthur"></ComboBoxItem>
                <ComboBoxItem Content="Rigatone"></ComboBoxItem>
                <ComboBoxItem Content="Blue"></ComboBoxItem>
                <ComboBox.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Focusable" Value="False"/>
                    </Style>
                </ComboBox.Resources>
            </ComboBox>
            <StackPanel Grid.Column="0">
                <Label Grid.Column="0" Content="Subject" FontSize="14"/>
                <Label Grid.Column="0" Content="Push Count" FontSize="14"/>
            </StackPanel>
        </Grid>
        <Grid Name="GridDataRecorder" Width="300" Height="200" Margin="60,239,382,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox x:Name="textBox1"  Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" />
            <Button x:Name="butSave" Content="Save Data" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="75"/>



        </Grid>
    </Grid>
</Window>
